# Auto detect text files and perform LF normalization
* text=auto

# These files should always have LF line endings
*.py text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.sh text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# These files should always have CRLF line endings on Windows
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files that should not be converted
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.tgz binary

# Python specific
*.pyc binary
*.pyo binary
*.pyd binary
*.egg binary
*.whl binary

# Virtual environments and cache directories
.venv/** binary
venv/** binary
__pycache__/** binary
.pytest_cache/** binary
.mypy_cache/** binary
.ruff_cache/** binary

# Temp and log files
tmp/** binary
*.log binary
run_log.txt binary

# CrewAI and AI model files (if any)
*.pkl binary
*.joblib binary
*.onnx binary

# Documentation should be treated as text
docs/** text
project-plans/** text
game-config/** text

# Configuration files
.github/** text
.env* text

# Export ignore for git archive
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tmp/ export-ignore
.env* export-ignore