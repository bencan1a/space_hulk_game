{
  "name": "Space Hulk Game Development",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/astral-sh/uv-devcontainer-feature/uv:latest": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": false,
        "python.formatting.provider": "none",
        "python.linting.mypyEnabled": true,
        "python.testing.pytestEnabled": false,
        "python.testing.unittestEnabled": true,
        "python.testing.unittestArgs": [
          "-v",
          "-s",
          "./tests",
          "-p",
          "test_*.py"
        ],
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll": true
          }
        },
        "files.associations": {
          "*.yaml": "yaml",
          "*.yml": "yaml"
        },
        "yaml.validate": true,
        "yaml.completion": true,
        "yaml.hover": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit",
          "source.fixAll": "explicit"
        },
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "editor.rulers": [100],
        "terminal.integrated.defaultProfile.linux": "bash",
        "git.autofetch": true,
        "extensions.autoUpdate": false
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.mypy-type-checker",
        "charliermarsh.ruff",
        "ms-python.debugpy",
        "github.copilot",
        "github.copilot-chat",
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml",
        "eamodio.gitlens",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        "ms-vscode.vscode-json",
        "github.vscode-pull-request-github",
        "ms-vscode.test-adapter-converter",
        "littlefoxteam.vscode-python-test-adapter",
        "donjayamanne.githistory",
        "ms-vscode.powershell",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "forwardPorts": [
    11434
  ],
  "portsAttributes": {
    "11434": {
      "label": "Ollama API",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "bash -c 'cd /workspaces/space_hulk_game && python3 -m venv .venv && source .venv/bin/activate && pip install --upgrade pip && pip install uv && uv pip install -e \".[dev]\" && pre-commit install && echo \"âœ… Dev environment ready! Pre-commit hooks installed.\"'",
  "postStartCommand": "echo 'Space Hulk Game development environment is ready! ðŸš€'",
  "containerEnv": {
    "PYTHONPATH": "/workspaces/space_hulk_game/src",
    "CREWAI_LOG_LEVEL": "INFO",
    "OLLAMA_HOST": "http://host.docker.internal:11434"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/space_hulk_game,type=bind,consistency=cached",
  "workspaceFolder": "/workspaces/space_hulk_game",
  "remoteUser": "vscode",
  "mounts": [
    "source=space-hulk-game-bashhistory,target=/home/vscode/.bash_history,type=volume",
    "source=space-hulk-game-vscode-extensions,target=/home/vscode/.vscode-server/extensions,type=volume"
  ],
  "initializeCommand": "echo 'Initializing Space Hulk Game devcontainer...'",
  "onCreateCommand": "echo 'Creating Space Hulk Game development environment...'",
  "privileged": false,
  "capAdd": [],
  "securityOpt": ["seccomp=unconfined"],
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  }
}
